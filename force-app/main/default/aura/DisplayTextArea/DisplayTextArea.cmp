<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <lightning:recordViewForm recordId="{!v.recordId}" objectApiName="Account">
        <div class="slds-scrollable slds-box slds-theme_default" style="height: 25rem;">
            <lightning:icon iconName="standard:solution"/>
            <lightning:outputField fieldName="Display_Field__c" variant="label-hidden" />
        </div>
    </lightning:recordViewForm>
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <lightning:button name="modal" label="Show Modal" onclick="{!c.handleShowModal}"/>
</aura:component>